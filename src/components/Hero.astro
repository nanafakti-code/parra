<section
    class="relative h-[65vh] md:h-[85vh] min-h-[400px] md:min-h-[500px] flex items-start pt-10 md:pt-16 overflow-hidden bg-black"
>
    <!-- Background Layer -->
    <div class="absolute inset-0 z-0">
        <div
            class="absolute inset-0 bg-[url('https://instagram.fsvq4-1.fna.fbcdn.net/v/t51.82787-15/639931240_18027648557616241_424163390501171464_n.jpg?stp=dst-jpg_e35_tt6&_nc_cat=101&ig_cache_key=MzgzNzYyNzU5NzQ4MDM1NzcyMw%3D%3D.3-ccb7-5&ccb=7-5&_nc_sid=58cdad&efg=eyJ2ZW5jb2RlX3RhZyI6InhwaWRzLjE0NDB4MTkyMC5zZHIuQzMifQ%3D%3D&_nc_ohc=iPc1oTXnNWAQ7kNvwFnePQN&_nc_oc=AdnmQfVClIp142L-cUxe5auK1Y8bAhum333-Q0wZzb0_CkY1c88j7akkhVqjN7093Bg&_nc_ad=z-m&_nc_cid=0&_nc_zt=23&_nc_ht=instagram.fsvq4-1.fna&_nc_gid=HHLg8-W2_tYCtjxovSWLWw&oh=00_AfsDr40EkiGEyTjPMQ8Nex67ziin1MdCTHwWMhK6upmumg&oe=69A1883D')] bg-cover bg-center"
            style="animation: subtle-zoom 20s ease-in-out infinite alternate;"
        >
        </div>

        <!-- Overlays for readability -->
        <div class="absolute inset-0 bg-black/40"></div>
        <div
            class="absolute inset-0"
            style="background: var(--gradient-hero-side);"
        >
        </div>
        <div
            class="absolute inset-0"
            style="background: var(--gradient-hero-bottom);"
        >
        </div>
    </div>

    <!-- Vertical accent line -->
    <div
        class="absolute left-8 top-1/4 bottom-1/4 w-[2px] bg-gradient-to-b from-transparent via-brand to-transparent opacity-30 hidden lg:block"
    >
    </div>

    <!-- Content -->
    <div class="container relative z-10">
        <div class="max-w-3xl text-left">
            <span
                class="inline-block px-4 py-1.5 bg-brand/10 border border-brand/30 text-brand text-[10px] md:text-xs font-bold uppercase tracking-[0.4em] mb-10 md:mb-8 opacity-0 animate-fade-up"
            >
                Nueva Colección 2026
            </span>

            <h1
                class="hero-title text-7xl sm:text-7xl md:text-8xl lg:text-9xl font-display font-bold uppercase leading-[0.85] tracking-tight md:tracking-tighter mb-10 md:mb-8 opacity-0 animate-fade-up anim-delay-100"
            >
                DOMINA
                <br />
                <span class="text-brand">EL ÁREA</span>
            </h1>

            <p
                class="hero-subtitle text-base md:text-xl max-w-lg mb-12 md:mb-10 opacity-0 animate-fade-up anim-delay-200"
            >
                Siente el agarre absoluto. Diseñados para porteros de elite que
                no aceptan menos que la perfección.
            </p>

            <div
                class="flex flex-wrap gap-4 opacity-0 animate-fade-up anim-delay-300"
            >
                <a href="/shop" class="btn-primary">
                    <span>Comprar Ahora</span>
                    <svg
                        class="w-4 h-4 inline-block ml-2"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                    </svg>
                </a>
                <a href="/shop?category=elite" class="btn-outline">
                    Serie Elite
                </a>
            </div>
        </div>
    </div>

    <!-- Marquee -->
    <div
        class="absolute bottom-4 left-0 w-full overflow-hidden whitespace-nowrap opacity-[0.03] pointer-events-none"
    >
        <div class="flex animate-marquee">
            <span
                class="text-[6rem] md:text-[14rem] font-display font-bold uppercase tracking-tighter leading-none shrink-0"
            >
                PARRA&nbsp;PARRA&nbsp;PARRA&nbsp;PARRA&nbsp;PARRA&nbsp;
            </span>
            <span
                class="text-[6rem] md:text-[14rem] font-display font-bold uppercase tracking-tighter leading-none shrink-0"
            >
                PARRA&nbsp;PARRA&nbsp;PARRA&nbsp;PARRA&nbsp;PARRA&nbsp;
            </span>
        </div>
    </div>

    <style>
        @keyframes subtle-zoom {
            0% {
                transform: scale(1.05);
            }
            100% {
                transform: scale(1.12);
            }
        }

        @keyframes float {
            0%,
            100% {
                transform: translateY(0);
            }
            50% {
                transform: translateY(-30px);
            }
        }

        .animate-float {
            animation: float 6s ease-in-out infinite;
        }

        .hero-title {
            color: var(--text-primary);
        }

        .hero-subtitle {
            color: var(--text-muted);
        }
    </style>
</section>
