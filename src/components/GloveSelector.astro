---

<section
    class="section bg-surface-950 border-y border-white/5 relative overflow-hidden"
>
    <div class="absolute inset-0 opacity-[0.02]">
        <div
            class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-brand rounded-full blur-[200px]"
        >
        </div>
    </div>

    <div class="container relative">
        <div class="text-center mb-16">
            <div
                class="inline-block px-4 py-1.5 border border-brand/20 text-brand text-xs font-bold uppercase tracking-[0.3em] mb-6"
            >
                Selector
            </div>
            <h2 class="section-title">
                Encuentra Tu <span class="text-brand">Guante Perfecto</span>
            </h2>
            <p class="section-subtitle mx-auto">
                Responde 3 preguntas y te recomendaremos el guante ideal para
                ti.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-4xl mx-auto">
            <!-- Step 1 -->
            <div
                class="card p-8 text-center group hover:-translate-y-1 transition-all duration-500"
            >
                <div
                    class="w-14 h-14 mx-auto mb-5 bg-brand/10 border border-brand/20 flex items-center justify-center text-brand font-display text-xl font-bold group-hover:bg-brand/20 transition-colors"
                >
                    01
                </div>
                <h3
                    class="font-display text-lg font-semibold uppercase tracking-tight mb-3"
                >
                    ¿Cuál es tu nivel?
                </h3>
                <div class="space-y-2">
                    <button
                        class="selector-btn w-full"
                        data-step="level"
                        data-value="pro"
                    >
                        Profesional / Semi-pro
                    </button>
                    <button
                        class="selector-btn w-full"
                        data-step="level"
                        data-value="training"
                    >
                        Entrenamiento regular
                    </button>
                    <button
                        class="selector-btn w-full"
                        data-step="level"
                        data-value="junior"
                    >
                        Iniciación / Juvenil
                    </button>
                </div>
            </div>

            <!-- Step 2 -->
            <div
                class="card p-8 text-center group hover:-translate-y-1 transition-all duration-500"
            >
                <div
                    class="w-14 h-14 mx-auto mb-5 bg-brand/10 border border-brand/20 flex items-center justify-center text-brand font-display text-xl font-bold group-hover:bg-brand/20 transition-colors"
                >
                    02
                </div>
                <h3
                    class="font-display text-lg font-semibold uppercase tracking-tight mb-3"
                >
                    Corte preferido
                </h3>
                <div class="space-y-2">
                    <button
                        class="selector-btn w-full"
                        data-step="cut"
                        data-value="negative"
                    >
                        Negativo (ajustado)
                    </button>
                    <button
                        class="selector-btn w-full"
                        data-step="cut"
                        data-value="roll"
                    >
                        Rollfinger (más agarre)
                    </button>
                    <button
                        class="selector-btn w-full"
                        data-step="cut"
                        data-value="hybrid"
                    >
                        Híbrido (equilibrado)
                    </button>
                </div>
            </div>

            <!-- Step 3 -->
            <div
                class="card p-8 text-center group hover:-translate-y-1 transition-all duration-500"
            >
                <div
                    class="w-14 h-14 mx-auto mb-5 bg-brand/10 border border-brand/20 flex items-center justify-center text-brand font-display text-xl font-bold group-hover:bg-brand/20 transition-colors"
                >
                    03
                </div>
                <h3
                    class="font-display text-lg font-semibold uppercase tracking-tight mb-3"
                >
                    Presupuesto
                </h3>
                <div class="space-y-2">
                    <button
                        class="selector-btn w-full"
                        data-step="budget"
                        data-value="premium"
                    >
                        Premium (+70€)
                    </button>
                    <button
                        class="selector-btn w-full"
                        data-step="budget"
                        data-value="mid"
                    >
                        Gama media (40-70€)
                    </button>
                    <button
                        class="selector-btn w-full"
                        data-step="budget"
                        data-value="entry"
                    >
                        Entrada (-40€)
                    </button>
                </div>
            </div>
        </div>

        <!-- Result -->
        <div id="selector-result" class="hidden mt-12 text-center">
            <div class="card p-8 max-w-lg mx-auto">
                <div
                    class="text-brand text-xs font-bold uppercase tracking-[0.2em] mb-3"
                >
                    Tu guante recomendado
                </div>
                <h3
                    id="selector-product-name"
                    class="font-display text-2xl font-bold uppercase mb-2"
                >
                </h3>
                <p
                    id="selector-product-desc"
                    class="text-white/40 text-sm mb-6"
                >
                </p>
                <a
                    id="selector-product-link"
                    href="#"
                    class="btn-primary inline-flex"
                >
                    Ver Producto
                    <svg
                        class="w-4 h-4 ml-2"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                    </svg>
                </a>
            </div>
        </div>
    </div>
</section>

<style>
    .selector-btn {
        @apply px-4 py-2.5 text-xs font-semibold uppercase tracking-wider
           border border-white/10 text-white/50
           transition-all duration-200
           hover:border-brand/50 hover:text-brand;
    }
    .selector-btn.active {
        @apply border-brand bg-brand/10 text-brand;
    }
</style>

<script>
    const selections: Record<string, string> = {};

    const recommendations: Record<
        string,
        { name: string; desc: string; slug: string }
    > = {
        pro: {
            name: "Titan Pro Negative Cut",
            desc: "Guante profesional con látex alemán 4mm y corte negativo",
            slug: "titan-pro-negative-cut",
        },
        training: {
            name: "Iron Wall Training",
            desc: "Guante de entrenamiento resistente con látex 3mm",
            slug: "iron-wall-training",
        },
        junior: {
            name: "Junior Pro First",
            desc: "Primer guante profesional para jóvenes porteros",
            slug: "junior-pro-first",
        },
    };

    document.querySelectorAll(".selector-btn").forEach((btn) => {
        btn.addEventListener("click", () => {
            const step = (btn as HTMLElement).dataset.step!;
            const value = (btn as HTMLElement).dataset.value!;

            // Deselect siblings
            btn.closest(".space-y-2")
                ?.querySelectorAll(".selector-btn")
                .forEach((b) => b.classList.remove("active"));
            btn.classList.add("active");
            selections[step] = value;

            // Show result when level is selected
            if (selections.level) {
                const rec = recommendations[selections.level];
                const result = document.getElementById("selector-result");
                const nameEl = document.getElementById("selector-product-name");
                const descEl = document.getElementById("selector-product-desc");
                const linkEl = document.getElementById("selector-product-link");

                if (result && nameEl && descEl && linkEl) {
                    nameEl.textContent = rec.name;
                    descEl.textContent = rec.desc;
                    linkEl.setAttribute("href", `/product/${rec.slug}`);
                    result.classList.remove("hidden");
                }
            }
        });
    });
</script>
