---
import { verifyToken } from "../lib/auth";

const token = Astro.cookies.get("auth_token")?.value;
const user = token ? verifyToken(token) : null;
---

<header
    id="main-header"
    class="fixed top-0 left-0 w-full z-50 transition-all duration-500 border-b border-transparent"
>
    <div class="container h-20 flex items-center justify-between">
        <!-- Logo -->
        <a
            href="/"
            class="text-2xl font-display font-bold tracking-tight flex items-center gap-0.5 z-10"
        >
            <span class="text-brand">PARRA</span>
        </a>

        <!-- Center Nav -->
        <nav
            class="hidden lg:flex items-center gap-8 text-xs font-semibold uppercase tracking-[0.2em]"
        >
            <a href="/" class="nav-link">Inicio</a>
            <a href="/shop" class="nav-link">Tienda</a>
            <a href="/shop?category=elite" class="nav-link">Elite</a>
            <a href="/shop?category=entrenamiento" class="nav-link"
                >Entrenamiento</a
            >
            <a href="/shop?category=infantil" class="nav-link">Infantil</a>
        </nav>

        <!-- Right Icons -->
        <div class="flex items-center gap-3">
            <!-- Search -->
            <button
                class="p-2.5 rounded-full hover:bg-white/5 transition-colors duration-200 group"
                aria-label="Buscar"
            >
                <svg
                    class="w-5 h-5 text-white/70 group-hover:text-brand transition-colors"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
            </button>

            <!-- User -->
            {
                user ? (
                    <div class="flex items-center gap-2">
                        <a
                            href="/profile"
                            class="p-2.5 rounded-full hover:bg-white/5 transition-colors duration-200 group"
                            aria-label="Mi Cuenta"
                        >
                            <svg
                                class="w-5 h-5 text-white/70 group-hover:text-brand transition-colors"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                                />
                            </svg>
                        </a>
                        <button
                            id="logout-btn"
                            class="p-2.5 rounded-full hover:bg-red-500/10 transition-colors duration-200 group"
                            title="Cerrar Sesión"
                        >
                            <svg
                                class="w-5 h-5 text-white/70 group-hover:text-red-500 transition-colors"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"
                                />
                            </svg>
                        </button>
                    </div>
                ) : (
                    <a
                        href="/login"
                        class="p-2.5 rounded-full hover:bg-white/5 transition-colors duration-200 group"
                        aria-label="Iniciar Sesión"
                    >
                        <svg
                            class="w-5 h-5 text-white/70 group-hover:text-brand transition-colors"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                            />
                        </svg>
                    </a>
                )
            }

            <!-- Cart -->
            <a
                href="/cart"
                class="relative p-2.5 rounded-full hover:bg-white/5 transition-colors duration-200 group"
                aria-label="Carrito"
            >
                <svg
                    class="w-5 h-5 text-white/70 group-hover:text-brand transition-colors"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                </svg>
                <span
                    id="cart-count"
                    class="absolute -top-0.5 -right-0.5 bg-brand text-black text-[9px] font-black w-4.5 h-4.5 flex items-center justify-center rounded-full"
                    >0</span
                >
            </a>

            <!-- Mobile Menu Button -->
            <button
                id="mobile-menu-btn"
                class="lg:hidden p-2.5 rounded-full hover:bg-white/5 transition-colors duration-200 group"
                aria-label="Menú"
            >
                <svg
                    class="w-5 h-5 text-white/70 group-hover:text-brand transition-colors"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>
        </div>
    </div>
</header>

<!-- Mobile Menu Overlay -->
<div
    id="mobile-menu"
    class="fixed inset-0 z-[60] bg-black/95 backdrop-blur-xl transform translate-x-full transition-transform duration-300 lg:hidden"
>
    <div class="flex flex-col h-full p-8">
        <div class="flex justify-between items-center mb-12">
            <span class="text-2xl font-display font-bold tracking-tight">
                <span class="text-brand">PARRA</span>
            </span>
            <button
                id="mobile-menu-close"
                class="p-2 hover:text-brand transition-colors"
            >
                <svg
                    class="w-6 h-6"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
        </div>
        <nav class="flex flex-col gap-6">
            <a
                href="/"
                class="text-3xl font-display font-bold uppercase tracking-tight hover:text-brand transition-colors"
                >Inicio</a
            >
            <a
                href="/shop"
                class="text-3xl font-display font-bold uppercase tracking-tight hover:text-brand transition-colors"
                >Tienda</a
            >
            <a
                href="/shop?category=elite"
                class="text-3xl font-display font-bold uppercase tracking-tight hover:text-brand transition-colors"
                >Elite</a
            >
            <a
                href="/shop?category=entrenamiento"
                class="text-3xl font-display font-bold uppercase tracking-tight hover:text-brand transition-colors"
                >Entrenamiento</a
            >
            <a
                href="/shop?category=infantil"
                class="text-3xl font-display font-bold uppercase tracking-tight hover:text-brand transition-colors"
                >Infantil</a
            >
        </nav>
        <div class="mt-auto flex flex-col gap-4">
            {
                user ? (
                    <a href="/profile" class="btn-outline text-center">
                        Mi Cuenta
                    </a>
                ) : (
                    <a href="/login" class="btn-primary text-center">
                        Iniciar Sesión
                    </a>
                )
            }
            <a href="/cart" class="btn-outline text-center">Carrito</a>
        </div>
    </div>
</div>

<!-- Spacer for fixed header -->
<div class="h-20"></div>

<style>
    .nav-link {
        @apply text-white/90 hover:text-brand transition-colors duration-200 relative;
    }
    .nav-link::after {
        content: "";
        @apply absolute -bottom-1 left-0 w-0 h-[2px] bg-brand transition-all duration-300;
    }
    .nav-link:hover::after {
        @apply w-full;
    }
</style>

<script>
    // Glass effect on scroll
    const header = document.getElementById("main-header");
    window.addEventListener("scroll", () => {
        if (!header) return;
        if (window.scrollY > 50) {
            header.classList.add(
                "bg-black/95",
                "backdrop-blur-2xl",
                "border-white/10",
            );
            header.classList.remove("border-transparent");
        } else {
            header.classList.remove(
                "bg-black/60",
                "backdrop-blur-xl",
                "border-white/5",
            );
            header.classList.add("border-transparent");
        }
    });

    // Mobile menu toggle
    const menuBtn = document.getElementById("mobile-menu-btn");
    const menuClose = document.getElementById("mobile-menu-close");
    const mobileMenu = document.getElementById("mobile-menu");

    menuBtn?.addEventListener("click", () => {
        mobileMenu?.classList.remove("translate-x-full");
        document.body.style.overflow = "hidden";
    });

    menuClose?.addEventListener("click", () => {
        mobileMenu?.classList.add("translate-x-full");
        document.body.style.overflow = "";
    });

    // Close mobile menu on link click
    mobileMenu?.querySelectorAll("a").forEach((link) => {
        link.addEventListener("click", () => {
            mobileMenu?.classList.add("translate-x-full");
            document.body.style.overflow = "";
        });
    });

    // Logout
    const logoutBtn = document.querySelector("#logout-btn");
    logoutBtn?.addEventListener("click", async () => {
        const response = await fetch("/api/auth/logout", { method: "POST" });
        if (response.ok) {
            window.location.href = "/";
        }
    });
</script>
