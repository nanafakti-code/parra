---
/**
 * src/components/Header.astro
 *
 * Componente de cabecera migrado a Supabase Auth.
 * Usa Astro.locals para detectar el estado del usuario de forma atómica.
 */

// 1. Obtener usuario y rol desde locals (inyectado por el middleware)
const { user, role } = Astro.locals;
---

<header
    id="main-header"
    class="fixed top-0 left-0 w-full z-50 transition-all duration-500 border-b"
    style="border-color: transparent; background-color: transparent;"
>
    <div class="container h-20 flex items-center justify-between">
        <!-- Logo -->
        <a
            href="/"
            class="text-2xl font-display font-bold tracking-tight flex items-center gap-0.5 z-10"
        >
            <span class="text-brand">PARRA</span>
        </a>

        <!-- Center Nav -->
        <nav
            class="hidden lg:flex items-center gap-8 text-xs font-semibold uppercase tracking-[0.2em]"
        >
            <a href="/" class="nav-link">Inicio</a>
            <a href="/shop" class="nav-link">Tienda</a>
            <a href="/shop?category=elite" class="nav-link">Elite</a>
            <a href="/shop?category=entrenamiento" class="nav-link"
                >Entrenamiento</a
            >
            <a href="/shop?category=infantil" class="nav-link">Infantil</a>
        </nav>

        <!-- Right Icons -->
        <div class="flex items-center gap-3">
            <!-- Search -->
            <button
                class="icon-btn p-2.5 rounded-full transition-colors duration-200 group"
                aria-label="Buscar"
            >
                <svg
                    class="w-5 h-5 icon-color group-hover:text-brand transition-colors"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
            </button>

            <!-- User Status -->
            {
                user ? (
                    <div class="flex items-center gap-2">
                        {/* Indicador de Admin (Desktop) */}
                        {role === "admin" && (
                            <a
                                href="/admin"
                                class="hidden md:block px-3 py-1 bg-brand/10 border border-brand/30 text-brand text-[8px] font-bold uppercase tracking-widest rounded-full"
                            >
                                Admin
                            </a>
                        )}

                        <a
                            href="/profile"
                            class="icon-btn p-2.5 rounded-full transition-colors duration-200 group flex items-center gap-2"
                            aria-label="Mi Cuenta"
                        >
                            <svg
                                class="w-5 h-5 icon-color group-hover:text-brand transition-colors"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                                />
                            </svg>
                        </a>

                        <button
                            id="logout-btn"
                            class="p-2.5 rounded-full hover:bg-red-500/10 transition-colors duration-200 group"
                            title="Cerrar Sesión"
                        >
                            <svg
                                class="w-5 h-5 icon-color group-hover:text-red-500 transition-colors"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"
                                />
                            </svg>
                        </button>
                    </div>
                ) : (
                    <div class="flex items-center gap-2">
                        <a
                            href="/login"
                            class="icon-btn p-2.5 rounded-full transition-colors duration-200 group"
                            aria-label="Iniciar Sesión"
                        >
                            <svg
                                class="w-5 h-5 icon-color group-hover:text-brand transition-colors"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                                />
                            </svg>
                        </a>
                    </div>
                )
            }

            <!-- Cart -->
            <a
                href="/cart"
                id="cart-trigger"
                class="relative icon-btn p-2.5 rounded-full transition-colors duration-200 group"
                aria-label="Carrito"
            >
                <svg
                    class="w-5 h-5 icon-color group-hover:text-brand transition-colors"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                </svg>
                <span
                    id="cart-count"
                    class="absolute -top-1 -right-1 bg-brand text-black text-[10px] font-black min-w-[20px] h-5 flex items-center justify-center rounded-full leading-none px-1"
                    style="display: none;">0</span
                >
            </a>

            <!-- Mobile Menu Button -->
            <button
                id="mobile-menu-btn"
                class="lg:hidden icon-btn p-2.5 rounded-full transition-colors duration-200 group"
                aria-label="Menú"
            >
                <svg
                    class="w-5 h-5 icon-color group-hover:text-brand transition-colors"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>
        </div>
    </div>
</header>

<!-- Mobile Menu Overlay -->
<div
    id="mobile-menu"
    class="fixed inset-0 z-[60] backdrop-blur-xl transform translate-x-full transition-transform duration-300 lg:hidden"
    style="background-color: var(--bg-mobile-menu);"
>
    <div class="flex flex-col h-full p-8">
        <div class="flex justify-between items-center mb-12">
            <span class="text-2xl font-display font-bold tracking-tight">
                <span class="text-brand">PARRA</span>
            </span>
            <button
                id="mobile-menu-close"
                class="p-2 hover:text-brand transition-colors"
            >
                <svg
                    class="w-6 h-6"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
        </div>
        <nav class="flex flex-col gap-6">
            <a
                href="/"
                class="text-3xl font-display font-bold uppercase tracking-tight hover:text-brand transition-colors"
                >Inicio</a
            >
            <a
                href="/shop"
                class="text-3xl font-display font-bold uppercase tracking-tight hover:text-brand transition-colors"
                >Tienda</a
            >
            <a
                href="/shop?category=elite"
                class="text-3xl font-display font-bold uppercase tracking-tight hover:text-brand transition-colors"
                >Elite</a
            >
            <a
                href="/shop?category=entrenamiento"
                class="text-3xl font-display font-bold uppercase tracking-tight hover:text-brand transition-colors"
                >Entrenamiento</a
            >
            <a
                href="/shop?category=infantil"
                class="text-3xl font-display font-bold uppercase tracking-tight hover:text-brand transition-colors"
                >Infantil</a
            >
        </nav>

        <div class="mt-auto flex flex-col gap-4">
            {
                user ? (
                    <>
                        {role === "admin" && (
                            <a href="/admin" class="btn-primary text-center">
                                Panel Administración
                            </a>
                        )}
                        <a href="/profile" class="btn-outline text-center">
                            Mi Cuenta
                        </a>
                        <button
                            id="mobile-logout-btn"
                            class="btn-outline text-red-500 border-red-500/30 hover:bg-red-500/10 text-center"
                        >
                            Cerrar Sesión
                        </button>
                    </>
                ) : (
                    <>
                        <a href="/login" class="btn-primary text-center">
                            Iniciar Sesión
                        </a>
                        <a href="/register" class="btn-outline text-center">
                            Regístrate
                        </a>
                    </>
                )
            }
            <a href="/cart" class="btn-outline text-center">Carrito</a>
        </div>
    </div>
</div>

<!-- Spacer for fixed header -->
<div class="h-20"></div>

<style>
    .nav-link {
        color: var(--text-secondary);
        @apply hover:text-brand transition-colors duration-200 relative;
    }
    .nav-link::after {
        content: "";
        @apply absolute -bottom-1 left-0 w-0 h-[2px] bg-brand transition-all duration-300;
    }
    .nav-link:hover::after {
        @apply w-full;
    }

    .icon-btn {
        @apply hover:bg-black/5;
    }
    :global(.dark) .icon-btn {
        @apply hover:bg-white/5;
    }

    .icon-color {
        color: var(--text-icon);
    }
</style>

<script is:inline>
    function initHeader() {
        // ── Force dark mode ──
        document.documentElement.classList.add("dark");
        if (typeof localStorage !== "undefined") {
            localStorage.setItem("theme", "dark");
        }

        // ── Glass effect on scroll ──
        var header = document.getElementById("main-header");

        function applyScrollState() {
            if (!header) return;
            if (window.scrollY > 50) {
                header.style.backgroundColor = "var(--bg-header-scroll)";
                header.style.backdropFilter = "blur(24px)";
                header.style.webkitBackdropFilter = "blur(24px)";
                header.style.borderColor = "var(--glass-border)";
            } else {
                header.style.backgroundColor = "transparent";
                header.style.backdropFilter = "none";
                header.style.webkitBackdropFilter = "none";
                header.style.borderColor = "transparent";
            }
        }

        applyScrollState();
        window.addEventListener("scroll", applyScrollState);

        // ── Mobile menu toggle ──
        var menuBtn = document.getElementById("mobile-menu-btn");
        var menuClose = document.getElementById("mobile-menu-close");
        var mobileMenu = document.getElementById("mobile-menu");

        if (menuBtn && mobileMenu) {
            menuBtn.onclick = function () {
                mobileMenu.classList.remove("translate-x-full");
                document.body.style.overflow = "hidden";
            };
        }

        if (menuClose && mobileMenu) {
            menuClose.onclick = function () {
                mobileMenu.classList.add("translate-x-full");
                document.body.style.overflow = "";
            };
        }

        if (mobileMenu) {
            mobileMenu.querySelectorAll("a").forEach(function (link) {
                link.onclick = function () {
                    mobileMenu.classList.add("translate-x-full");
                    document.body.style.overflow = "";
                };
            });
        }

        // ── Cart Count Update ──
        function updateCartCount() {
            var el = document.getElementById("cart-count");
            if (!el) return;
            try {
                var cart = JSON.parse(
                    localStorage.getItem("parra_cart") || "[]",
                );
                var total = cart.reduce(function (sum, item) {
                    return sum + item.quantity;
                }, 0);
                el.textContent = total.toString();
                el.style.display = total > 0 ? "flex" : "none";
            } catch (e) {
                console.error("Error updating cart count:", e);
            }
        }

        updateCartCount();
        window.addEventListener("cart:updated", updateCartCount);

        // ── Logout ──
        function handleLogout() {
            // Usamos redirección directa para evitar errores 403 de CSRF en peticiones POST
            window.location.href = "/api/auth/logout";
        }

        var logoutBtn = document.getElementById("logout-btn");
        var mobileLogoutBtn = document.getElementById("mobile-logout-btn");

        if (logoutBtn) {
            logoutBtn.onclick = function (e) {
                e.preventDefault();
                handleLogout();
            };
        }
        if (mobileLogoutBtn) {
            mobileLogoutBtn.onclick = function (e) {
                e.preventDefault();
                handleLogout();
            };
        }
    }

    // Run on initial load and on every View Transition navigation
    document.addEventListener("astro:page-load", initHeader);
    if (document.readyState === "complete") {
        initHeader();
    } else {
        document.addEventListener("DOMContentLoaded", initHeader);
    }
</script>
