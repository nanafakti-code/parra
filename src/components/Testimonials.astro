---
const testimonials = [
    {
        name: "Carlos Martínez",
        team: "Real Betis Juvenil A",
        rating: 5,
        quote: "Los mejores guantes que he probado. El agarre del Titan Pro es increíble, incluso en condiciones de lluvia.",
        avatar: "CM",
    },
    {
        name: "Laura Sánchez",
        team: "Selección Sub-19",
        rating: 5,
        quote: "Llevo toda la temporada con los Viper Grip y siguen como el primer día. La durabilidad es otro nivel.",
        avatar: "LS",
    },
    {
        name: "Miguel Ángel Torres",
        team: "Entrenador de porteros",
        rating: 5,
        quote: "Recomiendo PARRA a todos mis alumnos. Calidad profesional a un precio accesible. Sin duda la mejor marca.",
        avatar: "MT",
    },
];
---

<section class="section bg-surface-900/20 border-y border-white/5">
    <div class="container">
        <div class="text-center mb-16">
            <h2 class="section-title">
                Lo Que Dicen <span class="text-brand">Nuestros Porteros</span>
            </h2>
            <p class="section-subtitle mx-auto">
                Porteros de todos los niveles confían en PARRA.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {
                testimonials.map((t, i) => (
                    <div
                        class="card p-8 opacity-0 animate-fade-up relative"
                        style={`animation-delay: ${i * 0.15}s;`}
                    >
                        {/* Quote mark */}
                        <div class="text-brand/10 text-7xl font-display font-bold absolute top-4 right-6 leading-none">
                            "
                        </div>

                        {/* Stars */}
                        <div class="flex gap-1 mb-5">
                            {Array.from({ length: t.rating }).map(() => (
                                <svg
                                    class="w-4 h-4 text-brand"
                                    fill="currentColor"
                                    viewBox="0 0 20 20"
                                >
                                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                </svg>
                            ))}
                        </div>

                        {/* Quote */}
                        <p class="text-white/60 text-sm leading-relaxed mb-6 relative z-10">
                            "{t.quote}"
                        </p>

                        {/* Author */}
                        <div class="flex items-center gap-3">
                            <div class="w-10 h-10 bg-brand/10 border border-brand/20 flex items-center justify-center text-brand text-xs font-bold">
                                {t.avatar}
                            </div>
                            <div>
                                <div class="text-sm font-semibold">
                                    {t.name}
                                </div>
                                <div class="text-xs text-white/30">
                                    {t.team}
                                </div>
                            </div>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>
