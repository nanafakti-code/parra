---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const { user } = Astro.locals;
if (user) return Astro.redirect("/profile");
---

<Layout title="Iniciar Sesión">
    <Header />
    <main
        class="min-h-screen flex items-center justify-center py-24 px-4"
        style="background-color: var(--bg-primary);"
    >
        <div class="w-full max-w-md">
            <!-- Logo -->
            <div class="text-center mb-10">
                <a
                    href="/"
                    class="text-3xl font-display font-bold tracking-tight inline-block"
                >
                    <span class="text-brand">PARRA</span>
                </a>
                <p class="text-sm mt-2" style="color: var(--text-muted);">
                    Inicia sesión en tu cuenta
                </p>
            </div>

            <!-- Form Card -->
            <div class="card p-8 md:p-10">
                <form id="login-form" class="space-y-6">
                    <div>
                        <label
                            class="block text-xs font-semibold uppercase tracking-wider mb-2"
                            style="color: var(--text-secondary);"
                        >
                            Email
                        </label>
                        <input
                            type="email"
                            name="email"
                            class="input"
                            placeholder="tu@email.com"
                            required
                        />
                    </div>

                    <div>
                        <label
                            class="block text-xs font-semibold uppercase tracking-wider mb-2"
                            style="color: var(--text-secondary);"
                        >
                            Contraseña
                        </label>
                        <input
                            type="password"
                            name="password"
                            class="input"
                            placeholder="••••••••"
                            required
                        />
                    </div>

                    <div
                        id="login-error"
                        class="hidden text-red-500 text-xs text-center py-2 bg-red-500/10 border border-red-500/20"
                    >
                    </div>

                    <button
                        type="submit"
                        class="btn-glow w-full h-12 flex items-center justify-center"
                    >
                        Iniciar Sesión
                    </button>
                </form>

                <div class="mt-6 text-center">
                    <span class="text-sm" style="color: var(--text-muted);"
                        >¿No tienes cuenta?</span
                    >
                    <a
                        href="/register"
                        class="text-brand text-sm font-semibold hover:underline ml-1"
                    >
                        Regístrate
                    </a>
                </div>
            </div>
        </div>
    </main>
    <Footer />
</Layout>

<script is:inline>
    function initLoginPage() {
        var form = document.getElementById("login-form");
        var errorEl = document.getElementById("login-error");

        if (form) {
            form.addEventListener("submit", async function (e) {
                e.preventDefault();
                var formData = new FormData(form);
                var email = formData.get("email");
                var password = formData.get("password");

                var submitBtn = form.querySelector('button[type="submit"]');
                if (submitBtn) submitBtn.textContent = "Accediendo...";

                try {
                    var response = await fetch("/api/auth/login", {
                        method: "POST",
                        headers: { "Content-Type": "application/json" },
                        body: JSON.stringify({
                            email: email,
                            password: password,
                        }),
                    });

                    var data = await response.json();

                    if (response.ok) {
                        window.location.href = "/profile";
                    } else {
                        if (errorEl) {
                            errorEl.textContent =
                                data.message ||
                                data.error ||
                                "Credenciales incorrectas";
                            errorEl.classList.remove("hidden");
                        }
                        if (submitBtn) submitBtn.textContent = "Iniciar Sesión";
                    }
                } catch (err) {
                    if (errorEl) {
                        errorEl.textContent =
                            "Error de conexión. Inténtalo de nuevo.";
                        errorEl.classList.remove("hidden");
                    }
                    if (submitBtn) submitBtn.textContent = "Iniciar Sesión";
                }
            });
        }
    }

    document.addEventListener("astro:page-load", initLoginPage);
    if (document.readyState === "complete") {
        initLoginPage();
    } else {
        document.addEventListener("DOMContentLoaded", initLoginPage);
    }
</script>
