---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { verifyToken } from "../lib/auth";

const token = Astro.cookies.get("auth_token")?.value;
const user = token ? verifyToken(token) : null;
if (user) return Astro.redirect("/profile");
---

<Layout title="Iniciar Sesión">
    <Header />
    <main
        class="min-h-screen bg-surface-950 flex items-center justify-center py-24 px-4"
    >
        <div class="w-full max-w-md">
            <!-- Logo -->
            <div class="text-center mb-10">
                <a
                    href="/"
                    class="text-3xl font-display font-bold tracking-tight inline-block"
                >
                    <span class="text-brand">PARRA</span>
                </a>
                <p class="text-white/30 text-sm mt-2">
                    Inicia sesión en tu cuenta
                </p>
            </div>

            <!-- Form Card -->
            <div class="card p-8 md:p-10">
                <form id="login-form" class="space-y-6">
                    <div>
                        <label
                            class="block text-xs font-semibold uppercase tracking-wider text-white/60 mb-2"
                        >
                            Email
                        </label>
                        <input
                            type="email"
                            name="email"
                            class="input"
                            placeholder="tu@email.com"
                            required
                        />
                    </div>

                    <div>
                        <label
                            class="block text-xs font-semibold uppercase tracking-wider text-white/60 mb-2"
                        >
                            Contraseña
                        </label>
                        <input
                            type="password"
                            name="password"
                            class="input"
                            placeholder="••••••••"
                            required
                        />
                    </div>

                    <div
                        id="login-error"
                        class="hidden text-red-500 text-xs text-center py-2 bg-red-500/10 border border-red-500/20"
                    >
                    </div>

                    <button
                        type="submit"
                        class="btn-glow w-full h-12 flex items-center justify-center"
                    >
                        Iniciar Sesión
                    </button>
                </form>

                <div class="mt-6 text-center">
                    <span class="text-white/30 text-sm">¿No tienes cuenta?</span
                    >
                    <a
                        href="/register"
                        class="text-brand text-sm font-semibold hover:underline ml-1"
                    >
                        Regístrate
                    </a>
                </div>
            </div>
        </div>
    </main>
    <Footer />
</Layout>

<script>
    const form = document.getElementById("login-form") as HTMLFormElement;
    const errorEl = document.getElementById("login-error");

    form?.addEventListener("submit", async (e) => {
        e.preventDefault();
        const formData = new FormData(form);
        const email = formData.get("email") as string;
        const password = formData.get("password") as string;

        const submitBtn = form.querySelector('button[type="submit"]');
        if (submitBtn) submitBtn.textContent = "Accediendo...";

        try {
            const response = await fetch("/api/auth/login", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ email, password }),
            });

            const data = await response.json();

            if (response.ok) {
                window.location.href = "/profile";
            } else {
                if (errorEl) {
                    errorEl.textContent =
                        data.error || "Credenciales incorrectas";
                    errorEl.classList.remove("hidden");
                }
                if (submitBtn) submitBtn.textContent = "Iniciar Sesión";
            }
        } catch (err) {
            if (errorEl) {
                errorEl.textContent = "Error de conexión. Inténtalo de nuevo.";
                errorEl.classList.remove("hidden");
            }
            if (submitBtn) submitBtn.textContent = "Iniciar Sesión";
        }
    });
</script>
