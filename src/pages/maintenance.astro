<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Maintenance | We'll be back soon</title>
        <meta
            name="description"
            content="Our team is working on important improvements to provide you with the best possible service. We will be back very soon."
        />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="theme-color" content="#020617" />

        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Geist:wght@400;500;600;700&family=Playfair+Display:ital,wght@0,600;0,700;1,600&display=swap"
            rel="stylesheet"
        />
    </head>
    <body>
        <div class="maintenance-container">
            <!-- Subtle Glow Effects -->
            <div class="glow-effect"></div>
            <div class="glow-effect-secondary"></div>
            <div class="radial-center-highlight"></div>

            <div class="content">
                <!-- Premium Serif Logo -->
                <div class="logo-container fade-in">
                    <span class="logo-text">RBV</span>
                </div>

                <main class="main-content fade-in-up delay-1">
                    <h1>
                        We are improving <span class="gradient-text"
                            >the experience</span>
                    </h1>
                    <p class="description">
                        Our team is working on important improvements to provide
                        you with the best possible service. We will be back very
                        soon.
                    </p>

                    <!-- Progress Section -->
                    <div class="progress-section fade-in-up delay-2">
                        <div class="progress-header">
                            <span class="progress-label"
                                >UPDATE IN PROGRESS</span
                            >
                            <span class="progress-percentage">70%</span>
                        </div>
                        <!-- Accessible progress bar -->
                        <div
                            class="progress-track"
                            role="progressbar"
                            aria-valuenow="70"
                            aria-valuemin="0"
                            aria-valuemax="100"
                        >
                            <div class="progress-bar"></div>
                            <div class="progress-glow"></div>
                        </div>
                    </div>

                    <!-- Actions Section -->
                    <div class="actions fade-in-up delay-3">
                        <a
                            href="https://wa.me/tunumerodewhatsapp"
                            target="_blank"
                            rel="noopener noreferrer"
                            class="btn btn-glass"
                            aria-label="Contact via WhatsApp"
                        >
                            <svg
                                viewBox="0 0 24 24"
                                width="18"
                                height="18"
                                stroke="currentColor"
                                stroke-width="2"
                                fill="none"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                ><path
                                    d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"
                                ></path></svg
                            >
                            WhatsApp
                        </a>
                        <a
                            href="mailto:contacto@tuemail.com"
                            class="btn btn-glass"
                            aria-label="Contact via Email"
                        >
                            <svg
                                viewBox="0 0 24 24"
                                width="18"
                                height="18"
                                stroke="currentColor"
                                stroke-width="2"
                                fill="none"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                ><path
                                    d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"
                                ></path><polyline points="22,6 12,13 2,6"
                                ></polyline></svg
                            >
                            Email
                        </a>

                        <a
                            href="/"
                            class="btn btn-primary"
                            aria-label="Go back to Home"
                        >
                            <svg
                                viewBox="0 0 24 24"
                                width="18"
                                height="18"
                                stroke="currentColor"
                                stroke-width="2"
                                fill="none"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                ><path
                                    d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"
                                ></path><polyline points="9 22 9 12 15 12 15 22"
                                ></polyline></svg
                            >
                            Back to Home
                        </a>
                    </div>
                </main>
            </div>
        </div>
    </body>
</html>

<style>
    /* CSS Variables & Design System */
    :root {
        --bg-navy: #020617; /* Slate 950 - Premium midnight base */
        --brand-cyan: #22d3ee; /* Cyan 400 */
        --brand-blue: #3b82f6; /* Blue 500 */
        --brand-purple: #8b5cf6; /* Violet 500 */
        --brand-teal: #14b8a6; /* Teal 500 */

        --text-pure: #ffffff;
        --text-muted: #94a3b8; /* Slate 400 */

        --font-primary: "Geist", "Inter", system-ui, -apple-system, sans-serif;
        --font-serif: "Playfair Display", Georgia, serif;
    }

    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }

    body {
        margin: 0;
        height: 100vh;
        background-color: var(--bg-navy);
        font-family: var(--font-primary);
        color: var(--text-pure);
        overflow: hidden; /* Strict no-scroll */
        display: flex;
        justify-content: center;
        align-items: center;

        /* Premium Background Gradient (Navy -> Deep Blue) */
        background-image:
            radial-gradient(
                ellipse at 50% 0%,
                rgba(59, 130, 246, 0.12) 0%,
                transparent 60%
            ),
            radial-gradient(
                circle at 10% 40%,
                rgba(139, 92, 246, 0.05),
                transparent 40%
            ),
            radial-gradient(
                circle at 90% 60%,
                rgba(34, 211, 238, 0.05),
                transparent 40%
            ),
            linear-gradient(180deg, var(--bg-navy) 0%, #0f172a 100%); /* Slate 900 fade */
    }

    .maintenance-container {
        position: relative;
        width: 100%;
        height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 2rem;
        z-index: 1;
    }

    /* Cinematic Glow System */
    .glow-effect {
        position: absolute;
        width: 50vw;
        height: 50vw;
        max-width: 600px;
        max-height: 600px;
        background: radial-gradient(
            circle,
            rgba(34, 211, 238, 0.04) 0%,
            rgba(139, 92, 246, 0.03) 50%,
            transparent 70%
        );
        border-radius: 50%;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: -1;
        pointer-events: none;
        filter: blur(60px);
        animation: pulse-glow 10s ease-in-out infinite alternate;
    }

    .radial-center-highlight {
        position: absolute;
        width: 800px;
        height: 800px;
        background: radial-gradient(
            circle,
            rgba(255, 255, 255, 0.02) 0%,
            transparent 50%
        );
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        pointer-events: none;
        z-index: -1;
    }

    .content {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        max-width: 800px;
        width: 100%;
    }

    /* Top Logo Typography */
    .logo-container {
        margin-bottom: 3.5rem;
    }

    .logo-text {
        font-family: var(--font-serif);
        font-size: clamp(3rem, 6vw, 4.5rem);
        font-weight: 700;
        font-style: italic;
        letter-spacing: -0.05em;
        background: linear-gradient(to right, #ffffff 30%, #a1a1aa 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        line-height: 1;
        display: inline-block;
        filter: drop-shadow(0 4px 12px rgba(255, 255, 255, 0.08));
    }

    /* Heading & Description Text */
    .main-content {
        width: 100%;
        max-width: 680px;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1.5rem;
    }

    h1 {
        font-size: clamp(2rem, 5vw, 3.5rem);
        font-weight: 700;
        line-height: 1.15;
        letter-spacing: -0.03em;
        margin: 0;
    }

    .gradient-text {
        background: linear-gradient(
            135deg,
            var(--brand-cyan) 0%,
            var(--brand-blue) 100%
        );
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        color: transparent;
        display: inline-block;
    }

    .description {
        font-size: clamp(1rem, 2vw, 1.125rem);
        color: var(--text-muted);
        line-height: 1.6;
        max-width: 520px;
        margin: 0 auto;
        font-weight: 400;
    }

    /* Progress UI */
    .progress-section {
        width: 100%;
        max-width: 460px;
        margin: 2.5rem 0;
    }

    .progress-header {
        display: flex;
        justify-content: space-between;
        margin-bottom: 0.85rem;
        font-size: 0.75rem;
        font-weight: 600;
        color: #64748b; /* Slate 500 */
        letter-spacing: 0.15em;
    }

    .progress-percentage {
        color: var(--brand-cyan);
        font-weight: 700;
    }

    .progress-track {
        width: 100%;
        height: 4px; /* Thin, elegant rail */
        background: rgba(255, 255, 255, 0.05);
        border-radius: 9999px;
        position: relative;
    }

    .progress-bar {
        position: absolute;
        top: 0;
        left: 0;
        height: 100%;
        width: 0%;
        background: linear-gradient(
            90deg,
            var(--brand-blue),
            var(--brand-cyan)
        );
        border-radius: 9999px;
        box-shadow: 0 0 12px rgba(34, 211, 238, 0.4);
        animation: fill-progress 1.5s cubic-bezier(0.16, 1, 0.3, 1) forwards
            0.8s;
    }

    .progress-glow {
        position: absolute;
        top: 50%;
        left: 0;
        width: 0%;
        height: 100%;
        background: var(--brand-cyan);
        filter: blur(8px);
        opacity: 0.2;
        transform: translateY(-50%);
        animation: fill-progress 1.5s cubic-bezier(0.16, 1, 0.3, 1) forwards
            0.8s;
        pointer-events: none;
    }

    /* Action Buttons */
    .actions {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 1rem;
        width: 100%;
        margin-top: 1rem;
    }

    .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        padding: 0.75rem 1.75rem;
        border-radius: 9999px;
        font-size: 0.9375rem;
        font-weight: 500;
        text-decoration: none;
        transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
        cursor: pointer;
        backdrop-filter: blur(16px);
        -webkit-backdrop-filter: blur(16px);
    }

    .btn svg {
        transition: transform 0.2s ease;
    }

    /* Deep Premium Dark Glass */
    .btn-glass {
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid rgba(255, 255, 255, 0.08); /* Minimal border */
        color: var(--text-pure);
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.2);
    }

    .btn-glass:hover {
        background: rgba(255, 255, 255, 0.05); /* Slightly lighter on hover */
        border-color: rgba(
            255,
            255,
            255,
            0.15
        ); /* More pronounced border on hover */
        transform: translateY(-2px);
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.3);
    }

    /* Highlighted Brand Button */
    .btn-primary {
        background: linear-gradient(
            135deg,
            rgba(59, 130, 246, 0.1),
            rgba(34, 211, 238, 0.05)
        );
        color: white;
        border: 1px solid rgba(34, 211, 238, 0.25);
        position: relative;
        overflow: hidden;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.2);
    }

    .btn-primary::before {
        content: "";
        position: absolute;
        inset: 0;
        background: linear-gradient(
            135deg,
            var(--brand-blue),
            var(--brand-cyan)
        );
        opacity: 0.15;
        transition: opacity 0.2s ease;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        border-color: rgba(34, 211, 238, 0.6);
        box-shadow:
            0 10px 25px -5px rgba(34, 211, 238, 0.25),
            0 0 10px 0 rgba(34, 211, 238, 0.1) inset;
    }

    .btn-primary:hover::before {
        opacity: 0.3;
    }

    /* Animation Keyframes */
    @keyframes pulse-glow {
        0% {
            opacity: 0.5;
            transform: translate(-50%, -50%) scale(0.95);
        }
        100% {
            opacity: 0.8;
            transform: translate(-50%, -50%) scale(1.05);
        }
    }

    @keyframes fill-progress {
        0% {
            width: 0%;
        }
        100% {
            width: 70%;
        }
    }

    /* Core Fade-ins */
    .fade-in {
        opacity: 0;
        animation: fadeIn 1s ease-out forwards;
    }

    .fade-in-up {
        opacity: 0;
        transform: translateY(16px);
        animation: fadeInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    }

    .delay-1 {
        animation-delay: 0.1s;
    }
    .delay-2 {
        animation-delay: 0.25s;
    }
    .delay-3 {
        animation-delay: 0.4s;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(16px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Mobile First Adjustments */
    @media (max-width: 640px) {
        .actions {
            flex-direction: column;
            width: 100%;
            max-width: 320px;
        }

        .btn {
            width: 100%;
        }

        .logo-container {
            margin-bottom: 2.5rem;
        }

        .progress-section {
            padding: 0 1rem;
        }
    }
</style>
