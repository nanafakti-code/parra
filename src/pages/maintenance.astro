<style>
    /* PARRA Brand Variables */
    :root {
        --color-black: #000000;
        --color-neon-green: #39ff14;
        --color-dark-gray: #1a1a1a;
        --color-charcoal: #2d2d2d;
        --color-text-main: #ffffff;
        --color-text-muted: #a0a0a0;

        --font-heading: "Bebas Neue", Impact, sans-serif;
        --font-body: "Inter", system-ui, sans-serif;

        --transition-base: cubic-bezier(0.16, 1, 0.3, 1);
    }

    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }

    body {
        margin: 0;
        height: 100vh;
        background-color: var(--color-black);
        font-family: var(--font-body);
        color: var(--color-text-main);
        overflow: hidden; /* No scroll vertically */
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .maintenance-container {
        position: relative;
        width: 100%;
        height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 2rem;
        z-index: 1;
    }

    /* Cinematic green background glow */
    .glow-bg {
        position: absolute;
        width: 100vw;
        height: 100vh;
        background: radial-gradient(
            circle at center,
            rgba(57, 255, 20, 0.04) 0%,
            transparent 60%
        );
        top: 0;
        left: 0;
        z-index: -1;
        pointer-events: none;
        animation: breathingGlow 8s ease-in-out infinite alternate;
    }

    @keyframes breathingGlow {
        0% {
            opacity: 0.5;
            transform: scale(1);
        }
        100% {
            opacity: 1;
            transform: scale(1.05);
        }
    }

    .content {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        max-width: 800px;
        width: 100%;
    }

    /* Brand Logo Text */
    .logo-container {
        margin-bottom: 3.5rem;
    }

    .logo-text {
        font-family: var(--font-heading);
        font-size: clamp(4rem, 10vw, 7rem);
        font-weight: 400; /* Bebas Neue is bold natively */
        letter-spacing: 0.05em;
        color: var(--color-neon-green);
        line-height: 1;
        will-change: opacity, text-shadow;
        /* Premium neon elite animation */
        animation:
            premiumNeonPulse 4.5s ease-in-out infinite alternate,
            neonFlicker 12s linear infinite;
    }

    /* Constant Neon Pulse & Shadow Layering */
    @keyframes premiumNeonPulse {
        0% {
            text-shadow:
                0 0 2px rgba(57, 255, 20, 0.5),
                0 0 10px rgba(57, 255, 20, 0.15),
                0 0 25px rgba(57, 255, 20, 0.02);
        }
        100% {
            text-shadow:
                0 0 3px rgba(57, 255, 20, 0.8),
                0 0 15px rgba(57, 255, 20, 0.35),
                0 0 40px rgba(57, 255, 20, 0.15);
        }
    }

    /* Subtle Neon Flicker (Very Premium) 
       Occurs rarely like a high-end LED voltage shift */
    @keyframes neonFlicker {
        0%,
        93%,
        94%,
        95.5%,
        97%,
        100% {
            opacity: 1;
        }
        93.5% {
            opacity: 0.85;
        }
        96% {
            opacity: 0.9;
        }
    }

    /* Primary Heading & Subtext */
    .main-content {
        width: 100%;
        max-width: 760px;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1.5rem;
    }

    .title-container {
        margin: 0;
    }

    .block {
        display: block;
    }

    h1 {
        font-family: var(--font-heading);
        font-size: clamp(3rem, 7vw, 5.5rem);
        line-height: 1.05;
        letter-spacing: 0.03em;
        text-transform: uppercase;
        color: var(--color-text-main);
    }

    .accent-text {
        color: var(--color-neon-green);
    }

    /* Subtle neon pulse for green elements */
    .glow-text {
        display: inline-block;
        animation: neonPulse 3.5s ease-in-out infinite alternate 0.8s;
    }

    @keyframes neonPulse {
        0% {
            text-shadow: 0 0 4px rgba(57, 255, 20, 0.1);
        }
        100% {
            text-shadow: 0 0 16px rgba(57, 255, 20, 0.4);
        }
    }

    .description {
        font-size: clamp(1rem, 2.5vw, 1.25rem);
        color: var(--color-text-muted);
        line-height: 1.6;
        max-width: 600px;
        margin: 0 auto;
        font-weight: 400;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    /* Progress Mechanics */
    .progress-section {
        width: 100%;
        max-width: 500px;
        margin: 2.5rem 0;
    }

    .progress-header {
        display: flex;
        justify-content: space-between;
        margin-bottom: 0.6rem;
        font-family: var(--font-heading);
        font-size: clamp(1.2rem, 3vw, 1.5rem);
        color: var(--color-text-muted);
        letter-spacing: 0.1em;
    }

    .progress-percentage {
        color: var(--color-neon-green);
    }

    .progress-track {
        width: 100%;
        height: 6px;
        background-color: var(--color-dark-gray);
        position: relative;
        overflow: hidden; /* Important for tail effect */
    }

    .progress-bar {
        position: absolute;
        top: 0;
        left: 0;
        height: 100%;
        width: 0%;
        background-color: var(--color-neon-green);
        box-shadow: 0 0 10px rgba(57, 255, 20, 0.4);
        animation: fill-progress 1.5s var(--transition-base) forwards 1s;
    }

    /* Tail glow effect for progress bar */
    .progress-bar::after {
        content: "";
        position: absolute;
        top: 0;
        right: 0;
        height: 100%;
        width: 30px;
        background: linear-gradient(
            to right,
            transparent,
            rgba(255, 255, 255, 0.8)
        );
        box-shadow: 5px 0 15px rgba(57, 255, 20, 0.9);
        opacity: 0;
        animation: progress-trail 1.5s var(--transition-base) forwards 1s;
    }

    @keyframes progress-trail {
        0% {
            opacity: 0;
            transform: translateX(-10px);
        }
        15% {
            opacity: 1;
            transform: translateX(0);
        }
        85% {
            opacity: 1;
        }
        100% {
            opacity: 0;
        }
    }

    @keyframes fill-progress {
        0% {
            width: 0%;
        }
        100% {
            width: 70%;
        }
    }

    /* Action Buttons - Athletic & Rectangular */
    .actions {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 1rem;
        width: 100%;
        margin-top: 1.5rem;
    }

    .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
        padding: 1.1rem 2rem;
        font-family: var(--font-heading);
        font-size: clamp(1.2rem, 3vw, 1.4rem);
        letter-spacing: 0.05em;
        text-decoration: none;
        text-transform: uppercase;
        cursor: pointer;

        /* Core Athletic Button Styles with 200ms transition */
        background-color: var(--color-black);
        color: var(--color-neon-green);
        border: 1px solid rgba(57, 255, 20, 0.4);
        border-radius: 0; /* Sharp edges */
        box-shadow: inset 0 0 0 transparent;
        transition: all 200ms var(--transition-base);
        will-change: transform, box-shadow, border-color;
    }

    .btn:hover {
        border-color: var(--color-neon-green);
        box-shadow:
            inset 0 0 15px rgba(57, 255, 20, 0.15),
            0 0 15px rgba(57, 255, 20, 0.2);
        transform: translateY(-2px);
    }

    /* Elegant Fade In Up Animations */
    .fade-in-up {
        opacity: 0;
        transform: translateY(15px);
        animation: fadeInUp 0.8s var(--transition-base) forwards;
    }

    .delay-1 {
        animation-delay: 0.15s;
    }
    .delay-2 {
        animation-delay: 0.3s;
    }
    .delay-3 {
        animation-delay: 0.45s;
    }
    .delay-4 {
        animation-delay: 0.6s;
    }
    .delay-5 {
        animation-delay: 0.75s;
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(15px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Accessibility: Prefers Reduced Motion */
    @media (prefers-reduced-motion: reduce) {
        *,
        ::before,
        ::after {
            animation: none !important;
            transition: none !important;
            scroll-behavior: auto !important;
        }

        /* Reset initial states for elements that use forwards animation */
        .fade-in-up {
            opacity: 1 !important;
            transform: translateY(0) !important;
        }

        .progress-bar {
            width: 70% !important;
        }

        .progress-bar::after {
            display: none !important;
        }
    }

    /* Responsive Mobile Layout */
    @media (max-width: 640px) {
        .actions {
            flex-direction: column;
            width: 100%;
            max-width: 340px;
        }

        .btn {
            width: 100%;
        }

        .logo-container {
            margin-bottom: 2rem;
        }

        .progress-section {
            padding: 0;
        }
    }
</style>
