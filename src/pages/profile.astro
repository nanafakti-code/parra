---
/**
 * src/pages/profile.astro
 *
 * Página de perfil del usuario.
 * Migrada a Supabase Auth y SSR Middleware.
 */

import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { supabaseAdmin } from "../lib/supabase";

// 1. Validar sesión desde el middleware
// Astro.locals.user es inyectado por src/middleware.ts
const authUser = Astro.locals.user;

if (!authUser) {
    return Astro.redirect("/login");
}

// 2. Obtener datos del perfil extendido desde la tabla 'users'
// Usamos el ID de Auth para vincular
const { data: userProfile, error: profileError } = await supabaseAdmin
    .from("users")
    .select("*")
    .eq("id", authUser.id)
    .single();

// Si por alguna razón el perfil no existe, redirigir
if (profileError || !userProfile) {
    console.error(`[profile] Perfil no encontrado para user ${authUser.id}`);
    return Astro.redirect("/login");
}

// 3. Obtener historial de pedidos (unificando pedidos de cuenta e invitados)
// Buscamos por ID de usuario O por email (insensible a mayúsculas para invitados)
const { data: orders, error: ordersError } = await supabaseAdmin
    .from("orders")
    .select("*")
    .or(`user_id.eq.${authUser.id},email.ilike.${userProfile.email}`)
    .order("created_at", { ascending: false });

if (ordersError) {
    console.error(
        `[profile] Error al obtener pedidos para ${userProfile.email}:`,
        ordersError.message,
    );
}

// 4. Obtener items de cada pedido (unir con productos)
const ordersWithItems = [];
for (const order of orders || []) {
    const { data: items, error: itemsError } = await supabaseAdmin
        .from("order_items")
        .select("*, products(*)")
        .eq("order_id", order.id);

    if (itemsError) {
        console.error(
            `[profile] Error al obtener items para pedido ${order.id}:`,
            itemsError.message,
        );
    }

    ordersWithItems.push({
        ...order,
        items: (items || []).map((item: any) => ({
            ...item,
            product: item.products,
        })),
    });
}
---

<Layout title="Mi Perfil">
    <Header />
    <main
        class="min-h-screen py-24"
        style="background-color: var(--bg-primary);"
    >
        <div class="container">
            <div class="flex flex-col lg:flex-row gap-12 lg:gap-16">
                <!-- Sidebar -->
                <aside class="w-full lg:w-72 shrink-0 space-y-6">
                    <div class="card p-8 text-center">
                        <div
                            class="w-16 h-16 bg-brand/10 border border-brand/20 flex items-center justify-center mx-auto mb-4 text-brand font-display text-xl font-bold"
                        >
                            {userProfile.name.charAt(0).toUpperCase()}
                        </div>
                        <h2
                            class="font-display text-xl font-bold uppercase tracking-tight mb-1"
                        >
                            {userProfile.name}
                        </h2>
                        <p
                            class="text-sm mb-4"
                            style="color: var(--text-muted);"
                        >
                            {userProfile.email}
                        </p>
                        <div
                            class="text-[10px] uppercase tracking-[0.2em]"
                            style="color: var(--text-muted); opacity: 0.6;"
                        >
                            Miembro desde {
                                new Date(
                                    userProfile.created_at,
                                ).toLocaleDateString("es-ES")
                            }
                        </div>
                    </div>

                    <nav class="space-y-2">
                        <a
                            href="/profile"
                            class="block p-4 bg-brand text-black font-bold uppercase tracking-wider text-xs text-center"
                        >
                            Mis Pedidos
                        </a>
                        <a
                            href="/cart"
                            class="block p-4 card hover:text-brand font-semibold uppercase tracking-wider text-xs text-center transition-colors"
                            style="color: var(--text-muted);"
                        >
                            Carrito Activo
                        </a>
                        {
                            userProfile.role === "admin" && (
                                <a
                                    href="/admin"
                                    class="block p-4 card hover:text-brand font-semibold uppercase tracking-wider text-xs text-center transition-colors"
                                    style="color: var(--text-muted);"
                                >
                                    Panel Admin
                                </a>
                            )
                        }
                    </nav>
                </aside>

                <!-- Orders -->
                <div class="flex-1 min-w-0">
                    <h2 class="section-title mb-10">
                        Historial de <span class="text-brand">Pedidos</span>
                    </h2>

                    {
                        ordersWithItems.length > 0 ? (
                            <div class="space-y-6">
                                {ordersWithItems.map((order: any) => (
                                    <div class="card p-6 md:p-8">
                                        <div class="flex flex-col sm:flex-row justify-between gap-4 mb-6">
                                            <div>
                                                <p
                                                    class="text-[10px] font-semibold uppercase tracking-[0.2em] mb-1"
                                                    style="color: var(--text-muted);"
                                                >
                                                    Pedido
                                                </p>
                                                <p class="text-sm font-mono text-brand">
                                                    {order.order_number ||
                                                        `#${order.id.slice(-8).toUpperCase()}`}
                                                </p>
                                            </div>
                                            <div>
                                                <p
                                                    class="text-[10px] font-semibold uppercase tracking-[0.2em] mb-1"
                                                    style="color: var(--text-muted);"
                                                >
                                                    Fecha
                                                </p>
                                                <p
                                                    class="text-sm"
                                                    style="color: var(--text-secondary);"
                                                >
                                                    {new Date(
                                                        order.created_at,
                                                    ).toLocaleDateString(
                                                        "es-ES",
                                                    )}
                                                </p>
                                            </div>
                                            <div>
                                                <p
                                                    class="text-[10px] font-semibold uppercase tracking-[0.2em] mb-1"
                                                    style="color: var(--text-muted);"
                                                >
                                                    Estado
                                                </p>
                                                <span
                                                    class:list={[
                                                        "inline-block px-2.5 py-1 text-[10px] font-bold uppercase tracking-wider",
                                                        order.status ===
                                                        "delivered"
                                                            ? "bg-brand/10 text-brand"
                                                            : order.status ===
                                                                "cancelled"
                                                              ? "bg-red-500/10 text-red-500"
                                                              : order.status ===
                                                                  "pending"
                                                                ? "bg-amber-500/10 text-amber-500"
                                                                : "bg-blue-500/10 text-blue-500",
                                                    ]}
                                                >
                                                    {order.status}
                                                </span>
                                            </div>
                                            <div>
                                                <p
                                                    class="text-[10px] font-semibold uppercase tracking-[0.2em] mb-1"
                                                    style="color: var(--text-muted);"
                                                >
                                                    Total
                                                </p>
                                                <p class="text-lg font-bold">
                                                    €
                                                    {parseFloat(
                                                        order.total,
                                                    ).toFixed(2)}
                                                </p>
                                            </div>
                                        </div>

                                        <div
                                            class="space-y-3 pt-4"
                                            style="border-top: 1px solid var(--border-color);"
                                        >
                                            {order.items.map((item: any) => (
                                                <div class="flex items-center gap-4">
                                                    <div
                                                        class="w-12 h-12 overflow-hidden flex-shrink-0"
                                                        style="background-color: var(--bg-secondary);"
                                                    >
                                                        <img
                                                            src={
                                                                item.product
                                                                    ?.image ||
                                                                item.product_image
                                                            }
                                                            alt={
                                                                item.product
                                                                    ?.name ||
                                                                item.product_name
                                                            }
                                                            class="w-full h-full object-cover"
                                                        />
                                                    </div>
                                                    <div class="flex-1 min-w-0">
                                                        <p class="text-sm font-semibold uppercase truncate">
                                                            {item.product
                                                                ?.name ||
                                                                item.product_name}
                                                        </p>
                                                        <p
                                                            class="text-xs uppercase tracking-wider"
                                                            style="color: var(--text-muted);"
                                                        >
                                                            {item.quantity} x €
                                                            {parseFloat(
                                                                item.unit_price,
                                                            ).toFixed(2)}
                                                            {item.size &&
                                                                ` · Talla ${item.size}`}
                                                        </p>
                                                    </div>
                                                </div>
                                            ))}
                                        </div>
                                    </div>
                                ))}
                            </div>
                        ) : (
                            <div class="py-24 text-center card">
                                <svg
                                    class="w-12 h-12 mx-auto mb-6"
                                    style="color: var(--text-muted); opacity: 0.4;"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="1.5"
                                        d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"
                                    />
                                </svg>
                                <p
                                    class="uppercase tracking-[0.2em] text-sm mb-6"
                                    style="color: var(--text-muted);"
                                >
                                    No has realizado ningún pedido todavía.
                                </p>
                                <a href="/shop" class="btn-primary inline-flex">
                                    Ir a la tienda
                                </a>
                            </div>
                        )
                    }
                </div>
            </div>
        </div>
    </main>
    <Footer />
</Layout>
