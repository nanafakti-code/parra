---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const { user } = Astro.locals;
if (user) return Astro.redirect("/profile");
---

<Layout title="Crear Cuenta">
    <Header />
    <main
        class="min-h-screen flex items-center justify-center py-24 px-4"
        style="background-color: var(--bg-primary);"
    >
        <div class="w-full max-w-md">
            <!-- Logo -->
            <div class="text-center mb-10">
                <a
                    href="/"
                    class="text-3xl font-display font-bold tracking-tight inline-block"
                >
                    <span class="text-brand">PARRA</span>
                </a>
                <p class="text-sm mt-2" style="color: var(--text-muted);">
                    Crea tu cuenta PARRA
                </p>
            </div>

            <!-- Form Card -->
            <div class="card p-8 md:p-10">
                <form id="register-form" class="space-y-5">
                    <div>
                        <label
                            class="block text-xs font-semibold uppercase tracking-wider mb-2"
                            style="color: var(--text-secondary);"
                        >
                            Nombre completo
                        </label>
                        <input
                            type="text"
                            name="name"
                            class="input"
                            placeholder="Tu nombre"
                            required
                        />
                    </div>

                    <div>
                        <label
                            class="block text-xs font-semibold uppercase tracking-wider mb-2"
                            style="color: var(--text-secondary);"
                        >
                            Email
                        </label>
                        <input
                            type="email"
                            name="email"
                            class="input"
                            placeholder="tu@email.com"
                            required
                        />
                    </div>

                    <div>
                        <label
                            class="block text-xs font-semibold uppercase tracking-wider mb-2"
                            style="color: var(--text-secondary);"
                        >
                            Contraseña
                        </label>
                        <input
                            type="password"
                            name="password"
                            class="input"
                            placeholder="Mínimo 6 caracteres"
                            required
                            minlength="6"
                        />
                    </div>

                    <div>
                        <label
                            class="block text-xs font-semibold uppercase tracking-wider mb-2"
                            style="color: var(--text-secondary);"
                        >
                            Confirmar contraseña
                        </label>
                        <input
                            type="password"
                            name="confirmPassword"
                            class="input"
                            placeholder="Repite tu contraseña"
                            required
                            minlength="6"
                        />
                    </div>

                    <div
                        id="register-error"
                        class="hidden text-red-500 text-xs text-center py-2 bg-red-500/10 border border-red-500/20"
                    >
                    </div>

                    <button
                        type="submit"
                        class="btn-glow w-full h-12 flex items-center justify-center"
                    >
                        Crear Cuenta
                    </button>
                </form>

                <div class="mt-6 text-center">
                    <span class="text-sm" style="color: var(--text-muted);"
                        >¿Ya tienes cuenta?</span
                    >
                    <a
                        href="/login"
                        class="text-brand text-sm font-semibold hover:underline ml-1"
                    >
                        Inicia sesión
                    </a>
                </div>
            </div>
        </div>
    </main>
    <Footer />
</Layout>

<script is:inline>
    function initRegisterPage() {
        var form = document.getElementById("register-form");
        var errorEl = document.getElementById("register-error");

        if (form) {
            form.addEventListener("submit", async function (e) {
                e.preventDefault();
                var formData = new FormData(form);
                var name = formData.get("name");
                var email = formData.get("email");
                var password = formData.get("password");
                var confirmPassword = formData.get("confirmPassword");

                if (password !== confirmPassword) {
                    if (errorEl) {
                        errorEl.textContent = "Las contraseñas no coinciden";
                        errorEl.classList.remove("hidden");
                    }
                    return;
                }

                var submitBtn = form.querySelector('button[type="submit"]');
                if (submitBtn) submitBtn.textContent = "Creando cuenta...";

                try {
                    var response = await fetch("/api/auth/register", {
                        method: "POST",
                        headers: { "Content-Type": "application/json" },
                        body: JSON.stringify({
                            name: name,
                            email: email,
                            password: password,
                        }),
                    });

                    var data = await response.json();
                    console.log("[register] Server response:", data);

                    if (response.ok) {
                        window.location.href = "/login";
                    } else {
                        console.error("[register] Registration failed:", data);
                        if (errorEl) {
                            errorEl.textContent =
                                data.message ||
                                data.error ||
                                "Error al crear la cuenta";
                            errorEl.classList.remove("hidden");
                        }
                        if (submitBtn) submitBtn.textContent = "Crear Cuenta";
                    }
                } catch (err) {
                    console.error("[register] Network or parsing error:", err);
                    if (errorEl) {
                        errorEl.textContent =
                            "Error de conexión. Inténtalo de nuevo.";
                        errorEl.classList.remove("hidden");
                    }
                    if (submitBtn) submitBtn.textContent = "Crear Cuenta";
                }
            });
        }
    }

    document.addEventListener("astro:page-load", initRegisterPage);
    if (document.readyState === "complete") {
        initRegisterPage();
    } else {
        document.addEventListener("DOMContentLoaded", initRegisterPage);
    }
</script>
